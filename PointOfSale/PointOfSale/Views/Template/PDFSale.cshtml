@model PointOfSale.Models.VMSale
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintSale</title>
    <style>
        .contenedor {
           width: 900px !important;
           height:842px !important;
           margin:auto;
        }
        body{
           font-family:Arial, Helvetica, sans-serif
        }
        p.title{
           font-weight:bold;
        }
         p.title2{
           font-weight:bold;
           color: #03A99F;
           font-size:20px;
        }
        p.text{
           font-size:15px;
           font-weight:100;
           color:#858585;
        }
        p{
           margin:0px
        }
        .tbth{
           text-align:left;
        }

        table.tbproductos{
            border-collapse: separate;
            border-spacing: 4px;
        }

        table.tbproductos thead tr th {
           background-color: #03A99F;
           padding:10px;
           font-size:15px;
           color:white;
        }
        table.tbproductos tbody tr td{
           padding:10px;
        }
        .item{
           font-size:15px;
           font-weight:100;
           color:#757575;
        }
        .item-2{
        font-size:15px;
           font-weight:bold;
           color:#757575;
        }

        .item-3{
           font-size:15px;
           font-weight:bold;
           background-color:#03A99F;
           color:white;
        }

         .td-item {
           border-bottom:2px solid #E8E8E8 !important;
         }
    </style>
</head>
<body >

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    @* <img src="https: //images.unsplash.com/photo-1544216292-b5417607b70a?w=200&q=80" style="width: 120px;height:120px"/> *@
                    @* <img src="~/img/pnclogotrans.jpg" /> *@
                    <img src="~/img/newlogo.jpg" />
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">SALE NUMBER</p></td></tr>
                        <tr><td>@Model.SaleNumber</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
         <table style="width:100%">
            <tr>
                <td>
                    <table >
                        <tr>
                            <td>
                                <p class="title">P&C Technologies</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">Address: Street:  1 School rd Bethelsdorp  </p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Email: pnct@info.co.za</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">CLIENT</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.ClientName</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.CustomerDocument</p></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">Product</th>
                    <th class="tbth" style="width:130px">Quantity</th>
                    <th class="tbth" style="width:130px">Price</th>
                    <th class="tbth" style="width:130px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.DetailSales)
                    {
                        <tr>
                            <td class="td-item"><p class="item">@item.DescriptionProduct</p></td>
                            <td class="td-item"><p class="item">@item.Quantity</p></td>
                            <td class="td-item"><p class="item">ZAR @item.Price</p></td>
                            <td style="background-color:#EDF6F9"><p class="item">ZAR @item.Total</p></td>
                        </tr>

                    }
                }
                <tr>
                    <td colspan="2" rowspan="3">
                    </td>
                    <td  class="td-item">
                        <p class="item-2">Sub Total</p>
                    </td>
                     <td class="item-3">
                         <p>ZAR @Model.Subtotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="td-item">
                        <p class="item-2" >Total Taxes</p>
                    </td>
                     <td class="item-3">
                         <p>ZAR @Model.TotalTaxes</p>
                    </td>
                </tr>
                 <tr>
                    <td class="item-3">
                        <p >Total</p>
                    </td>
                     <td class="item-3">
                         <p>ZAR @Model.Total</p>
                    </td>
                </tr>
            </tbody>
        </table>
       
    </div>

</body>
</html>


