<div class="container mt-4">
    <div class="row">
        @foreach (var tile in new[]
        {
        new { Title = "Analytics", Icon = "chart-bar", Action = "Dashboard", Controller = "Admin" },
        new { Title = "Users", Icon = "users", Action = "Users", Controller = "Admin" },
        new { Title = "Categories", Icon = "tags", Action = "Categories", Controller = "Inventory" },
        new { Title = "Products", Icon = "box", Action = "Products", Controller = "Inventory" },
        new { Title = "Sales", Icon = "shopping-cart", Action = "NewSale", Controller = "Sales" },
        new { Title = "Sales History", Icon = "history", Action = "SalesHistory", Controller = "Sales" },
        new { Title = "Sales Report", Icon = "file-alt", Action = "SalesReport", Controller = "Reports" },
        new { Title = "Settings", Icon = "cogs", Action = "Dashboard", Controller = "Admin" }, // Filler tile
        new { Title = "Help", Icon = "question-circle", Action = "Dashboard", Controller = "Admin" } // Filler tile
        })
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action(tile.Action, tile.Controller)" class="tile">
                    <div class="tile-content">
                        <i class="fas fa-@tile.Icon"></i>
                        <h5>@tile.Title</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/plugins/custom.js"></script>
}
